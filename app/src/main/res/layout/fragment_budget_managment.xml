<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/background"
    tools:context=".fragments.BudgetManagmentFragment">

    <EditText
        android:id="@+id/editTextBudgetName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Budget Name" />

    <EditText
        android:id="@+id/editTextBudgetAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Budget Amount" />

    <Button
        android:id="@+id/buttonSetBudget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/Orange"
        android:text="Set Budget" />

    <ListView
        android:id="@+id/listViewBudgets"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>